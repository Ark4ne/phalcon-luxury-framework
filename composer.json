{
  "name": "nucleon/framework",
  "description": "Phalcon extended framework. (Nucleon:Kernel)",
  "keywords": ["framework", "phalcon", "nucleon"],
  "minimum-stability": "dev",
  "license": "MIT",
  "authors": [
    {
      "name": "Ark4ne (Guillaume Allegret)",
      "email": "gui.allegret@gmail.com"
    }
  ],
  "require": {
    "php": "5.6 - 7.3",
    "ext-phalcon": "~3.0",
    "nikic/php-parser": "^3.0",
    "ark4ne/highlight": "dev-master"
  },
  "require-dev": {
    "phalcon/ide-stubs": "~3.0",
    "phpunit/phpunit": "~5.6",
    "mockery/mockery": "~0.9.4",
    "satooshi/php-coveralls": "~1.0"
  },
  "replace" : {
    "neutrino/dotconst": "~1.0",
    "neutrino/optimizer": "self.version"
  },
  "autoload": {
    "psr-4": {
      "Neutrino\\": "src/Neutrino/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests/Test/",
      "Fake\\": "tests/.fake/nucleon.app/app/"
    }
  }
}